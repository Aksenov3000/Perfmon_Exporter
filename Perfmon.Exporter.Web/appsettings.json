{
    "PerformanceCounters": {
        "Prefix": "perfmon",
        "Categories": [
            {
                "Name": "Processor",
                "SplitInstances": "true",
                "InstanceLabel": "core",
                "Prefix": "cpu",
                "Counters": [
                    {
                        "Name": "% Processor Time",
                        "CustomDescription": true,
                        "Description": "Processor time percent",
                        "Kind": "gauge",
                        "Prefix": "percent_processor_time"
                    }
                ]
            },
            {
                "Name": "Memory",
                "SplitInstances": "false",
                "Prefix": "memory",
                "Counters": [
                    {
                        "Name": "Available Bytes",
                        "CustomDescription": false,
                        "Kind": "gauge",
                        "Prefix": "available_bytes"
                    }
                ]
            }
        ]
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*"
}
